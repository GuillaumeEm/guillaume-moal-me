---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { SITE_TITLE } from "../config";
const title = "Projets - " + SITE_TITLE;
---

<BaseLayout title={title} sideBarActiveItemID="projects">
  <div>
    <h1 class="text-3xl w-full font-bold mb-5">Projets</h1>
  </div>
  <HorizontalCard
    title="1 Gem"
    img="/logo-1g-banner.webp"
    desc="Mes dernières missions : Création d'une automatisation Google Sheet/APIs/CRM, Modernisation et conseil pour un  CRM PHP"
    url="https://1gem.dev"
    badge=""
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Docamate"
    img="/post_img.webp"
    desc="Docamate est votre assistant dédié pour l'analyse et l'audit de votre documentation, permettant à vos équipes d'améliorer continuellement la qualité de cette dernière"
    url="https://docamate.com"
    badge=""
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Change-log.cloud"
    img="/cloudlog-owl-banner.webp"
    desc="Agrégateur d'actualités provenant de divers fournisseurs cloud, offrant un résumé exécutif et un suivi de l'impact actuel et potentielles"
    url="https://change-log.cloud/"
    badge=""
  />
</BaseLayout>
